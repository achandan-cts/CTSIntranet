

 <html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
          $(".notificationsbar").hide();
          $(".notifications").click(function(){
            $(".notificationsbar").fadeToggle(250);
          })
          $(".circle").click(function(){
            $(".notificationsbar").fadeToggle(250);
          })
      })
    </script>
	<title>CTS Intranet</title>
	<script>
	    $(document).ready(function(){
	    	$("#picupload").change(function(){
	    		$("#picdisplay").remove();
	    		$("#uploadmsg").html("Please submit to view your new profile picture.")
	    	})
	    })
    </script>
    <style>
    	.btn-default{margin-bottom:75px;}
    </style>
  </head>
	  <body>
		    <div class="topbar">
		      	<div class="leftbar">
		        	<a href="/home">
		        		<img src="/images/logo.png" id="logo">
		        	</a>
				</div>
		      	<div class="rightbar">
		    		<div class="circle">
		    			<p class="text-center"></p>
		    		</div>
		      		<img src ="/images/notifications.png" class="notifications">
		      		<div class="notificationsbar">  
		      		  <div class="table-responsive">
		      		      <table class="table notitable">
		      		          <tr class="notirow">
		      		                  <td>Notification Number one</td>
		      		          </tr>
		      		          <tr class="notirow">
		      		                  <td>Notification Number two</td>
		      		          </tr>
		      		          <tr class="notirow">
		      		                  <td>Notification Number three</td>
		      		          </tr>
		      		      </table>
		      		  </div>
		      		</div>
		      		<span class="title"> CTS Intranet</span>
				</div>
		    </div>
		    <div class="content">
		      	<div class="toolbar">
		          	<a href="/logout"><button type="submit" class="btn btn-primary btn-xs logout">Logout</button></a>
		          	<a href="/home"><button type="submit" class="btn btn-primary btn-xs homebutton">Home</button></a>
		          	<a href="/profile"><button type="submit" class="btn btn-primary btn-xs profile">Profile</button></a>
		          	<a href="/calendar"><button type="submit" class="btn btn-primary btn-xs calendar">Calendar</button></a>
		          	<a href="/espp"><button type="submit" class="btn btn-primary btn-xs espp">ESPP</button></a>
		        </div>
		   		
				<form action='/profileupdate' method='post' enctype="multipart/form-data">
					<% for (var x in users) { %>
		    			First Name:
		   					<input type='text' name='firstname' class="form-control" id="exampleInputEmail1" value=<%=  users[x].firstname %>><br>
		    			Last Name:
		    				<input type='text' name='lastname' class="form-control" id="exampleInputEmail1" value=<%=  users[x].lastname %>><br>
		      			<a href="/changepass">Change Password </a><br><br>
		      			Date of Birth:
		    				<input type='date' name='dob' class="form-control" id="exampleInputEmail1" value=<%=  users[x].dob %>><br>
		      			Email:
		    				<input type='text' name='email' class="form-control" id="exampleInputEmail1" value=<%=  users[x].email %>><br>
		    			Profile Picture:
		    				<input type="file" name="profilepic" id="picupload"></input>
		    				<img src=<%=  users[x].profilepic %> width="100px" id="picdisplay"><div id="uploadmsg"></div><br>
						Department:
		    				<select class="form-control" name="department" id="deparment">
								<option <% var select="";if (users[x].department==="Engineering"){select="selected"}%><%= select %>>Engineering</option>
		                		<option <% var select="";if (users[x].department==="Operations"){select="selected"}%><%= select %>>Operations</option>
		                		<option <% var select="";if (users[x].department==="Retail/International Sales"){select="selected"}%><%= select %>>Retail/International Sales</option>
		                		<option <% var select="";if (users[x].department==="National Home Center"){select="Selected"}%><%= select %>>National Home Center</option>
		                		<option <% var select="";if (users[x].department==="Order Desk/Accounting"){select="selected"}%><%= select %>>Order Desk/Accounting</option>
		                		<option <% var select="";if (users[x].department==="Quality"){select="selected"}%><%= select %> >Quality</option>
		                		<option <% var select="";if (users[x].department==="Marketing"){select="selected"}%><%= select %>>Marketing</option>
							</select><br>
		    			<input type="hidden" name="emailval" value="false">
		    			<input type="hidden" name="role" value="user">
		    			<button type="submit" class="btn btn-default">Submit</button>
		       		<% } %>
		       	</form>
	    	</div>
	  </body>
</html>
